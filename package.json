{
  "name": "mern",
  "version": "1.0.0",
  "description": "react based google book search",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Lily Simmons",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.2",
    "nodemon": "^1.19.4"
  },
  "dependencies": {
    "axios": "^0.18.1",
    "classnames": "^2.2.6",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongodb": "^3.3.3",
    "mongoose": "^5.7.7",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^2.1.8",
    "react-toastify": "^5.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ghawthorne66/bookstore"
  },
  "bugs": {
    "url": "https://github.com/ghawthorne66/bookstore/issues"
  },
  "homepage": "https://github.com/ghawthorne66/bookstore/blob/master/README.md"
}
